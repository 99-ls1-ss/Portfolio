@model Portfolio.Models.BlogPost
@{
    ViewBag.Title = "Create";
    ViewBag.MenuItem = "Blog";
}

    <section id="blog-posts" class="section colored-wrapper blogCreate">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h2>@ViewBag.Title</h2>
                    <h3>@ViewBag.Message</h3>
                </div>
                <div class="col-md-5 blogAccount">
                    @Html.Partial("_LoginPartial")
                    <br />
                    <br />
                    <a href="@Url.Action("Index", "Blog")" class="pull-right">Back to Blog Home</a>
                </div>
            </div>

        <form action="@Url.Action("Create")" method="post" enctype="multipart/form-data">

            @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-xs-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <h4>
                                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                            </h4>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <h4>
                                @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label" })
                            </h4>  
                            @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control", @id = "tinyMceEditor" } })
                            @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MediaURL, htmlAttributes: new { @class = "control-label col-xs-3 col-sm-2 text-right" })
                            <div class="col-xs-8 col-sm-9">
                                @*@Html.EditorFor(model => model.MediaURL, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.ValidationMessageFor(model => model.MediaURL, "", new { @class = "text-danger" })
                                <input name="image" type="file" class="form-control mediaUrl" id="fileUpload" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsPublished, htmlAttributes: new { @class = "control-label col-xs-3 col-sm-2 text-right" })
                            <div class="col-xs-8 col-sm-9">
                                <div class="checkbox">
                                    @*@Html.EditorFor(model => model.IsPublished, new { @checked = "checked"})*@
                                    @Html.CheckBoxFor(model => model.IsPublished, true)

                                    @Html.ValidationMessageFor(model => model.IsPublished, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-xs-offset-2 col-xs-10">
                                <input type="submit" value="Create Blog" class="btn btn-flat flat-color" />
                            </div>
                        </div>
                    </div>
                </div>
            </form> 
        </div>
    </section>

