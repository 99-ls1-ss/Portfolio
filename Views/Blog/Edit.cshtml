@model Portfolio.Models.BlogPost
@{
    ViewBag.Title = "Edit Post";
}

<section id="blog-posts" class="section colored-wrapper">
    <div class="container">

        <div class="row">
            <div class="col-md-8">
                <h2>@ViewBag.Title</h2>
                <h3>@ViewBag.Message</h3>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Index", "Blog")" class="pull-right">Back to Blog Home</a>
            </div>
        </div>

        <form action="@Url.Action("Edit")" method="post" enctype="multipart/form-data">

            @Html.AntiForgeryToken()

            <div class="post-content">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control", @id = "tinyMceEditor" } })
                                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.MediaURL, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @*@Html.EditorFor(model => model.MediaURL, new { htmlAttributes = new { @class = "form-control", id = "fileUpload", type = "file" } })*@
                                @Html.ValidationMessageFor(model => model.MediaURL, "", new { @class = "text-danger" })
                                <input name="image" type="file" class="form-control" id="fileUpload" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsPublished, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsPublished)
                                    @Html.ValidationMessageFor(model => model.IsPublished, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            </form>

</div>
</section>