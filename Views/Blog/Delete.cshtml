@model Portfolio.Models.BlogPost
@{
    ViewBag.Title = "Delete Blog";
    ViewBag.Message = Model.Title;
    ViewBag.MenuItem = "Blog";
}

<section id="blog-posts" class="section colored-wrapper">
    <div class="container">

        <div class="row">
            <div class="col-md-8">
                <h2>@ViewBag.Title</h2>
                <h3>@ViewBag.Message</h3>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Index", "Blog")" class="pull-right">Back to Blog Home</a>
            </div>
        </div>

        <form action="@Url.Action("Delete")" method="post" enctype="multipart/form-data">

            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-12">
                    <div class="post-content">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="post-content">
                            @*<h4>@Html.DisplayFor(model => model.Title)</h4>*@
                            <div class="blogBody">@Html.Raw(Model.Body)</div>
                            
                                @if (Model.MediaURL != null) {
                                    <div class="media-body">
                                        <img src="@Model.MediaURL" class="img-responsive" alt="@Model.Title" />
                                    </div>
                                }
                                    
                        </div>
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Delete" class="btn btn-flat flat-color" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </form>

    </div>
</section>