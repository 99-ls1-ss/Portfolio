@model IEnumerable<Portfolio.Models.BlogPost>
@{
    ViewBag.Title = "My Blog";
}

<section id="blog-posts" class="section colored-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-xs-9">
                <h2>@ViewBag.Title</h2>
                <h3>@ViewBag.Message</h3>
            </div>
            <div class="col-xs-3 blogAccount">
                <a href="@Url.Action("Login","Account")"><h5>Login</h5></a>
                <a href="@Url.Action("Register","Account")"><h5>Register</h5></a>
            </div>
        </div>
        <div class="wrapper-2">
            <h5 class="subpage-title">
                <span>Welcome to Brandon's Blog</span>
            </h5>
            <div class="row">
                <div class="col-md-12 content-wrapper">
                    <div class="row">
                        <div class="col-md-12">
                            <a href="@Url.Action("Create", "Blog")" class="pull-right">Create New Post</a>
                        </div>
                    </div>

                    @foreach (var item in Model) {

                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <article class="post">
                                <div class="post-thumb">
                                    <a href="/Content/Images/blog/photo (1).jpg">
                                        <img src="/Content/Images/blog/photo (1).jpg" class="img-responsive" alt="Responsive image">
                                    </a>
                                </div>
                                <!-- /.post-thumb -->
                                <div class="post-content">
                                    <h4 class="post-title">
                                        <a href="@Url.Action("Details", "Blog", new {id = item.Id })">@item.Title</a>
                                    </h4>
                                    <p>
                                        @Html.Raw(item.Body)
                                    </p>
                                </div>
                                <!-- /.post-content -->
                                <div class="post-meta">
                                    <ul class="meta-list row">
                                        <li class="col-md-12"><span>Posted on</span><span class="black">@item.Created</span></li>
                                        <li class="col-md-3"><a href="@Url.Action("Edit", "Blog", new { id = item.Id })" class="editDeleteLink">Edit Post</a></li>
                                        <li class="col-md-4"><a href="@Url.Action("Delete", "Blog", new { id = item.Id })" class="editDeleteLink">Delete Post</a></li>
                                        <li class="col-xs-5"><a class="read-more" href="@Url.Action("Details", "Blog", new {id = item.Id })">Read More <i class="icon-long-arrow-right"></i></a></li>
                                    </ul>
                                </div>
                                <!-- /.post-meta -->
                                
                            </article>
                            <!-- /.article -->
                            <!-- /.post-meta -->
                            <!-- /.post -->
                        </div>
                    <!-- /.col-md-4 -->

                        
                    }

                </div>
                <!-- /#caroufredsel-blog-posts-container -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="container">
                    <div class="col-xs-9"></div>
                    <div class="col-xs-3 blogAccount">
                        <a href="@Url.Action("Login","Account")"><h5>Login</h5></a>
                        <a href="@Url.Action("Register","Account")"><h5>Register</h5></a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.wrapper-2 -->
    </div>
    <!-- /.container -->
</section>
<!-- /#blog-posts -->
