@model Portfolio.Models.BlogPost
@{
    ViewBag.Title = "Details";
}


<section id="blog-posts" class="section colored-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2>@ViewBag.Title</h2>
                <h3>@ViewBag.Message</h3>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Index", "Blog")" class="pull-right">Back to Blog Home</a>
            </div>
        </div>
        <div class="post-content">
            <h4>@Html.DisplayFor(model => model.Title)</h4>
            <div class="blogBody">@Html.Raw(Model.Body)</div>
            <div class="media-body">
                @if (Model.MediaURL != null) {
                    <img src="@Model.MediaURL" class="img-responsive" alt="@Model.Title" />
                }
            </div>
        </div>
        <div class="post-meta">
            <ul class="meta-list">
                <li>
                    <span>Posted on</span>
                    <span class="black">@Html.DisplayFor(model => model.Created)</span>
                </li>
                <li>
                    <span>By Brandon Payne</span>
                </li>
                @*<li>
                        <span class="black">Put count of views here if possible</span>
                    </li>*@
            </ul>
        </div>
        <div class="post-comments">
            <div class="col-md-12">
                <h5 class="subpage-title"><span style="font-size:.7em;">(Add Comment Count)</span> Comments</h5>

                @foreach (var comment in Model.Comments) {
                    <ul class="media-list">
                        <li class="media">
                            <a class="pull-left" href="#">
                                <img class="media-object" width="64" height="64" src="assets/img/users/photo (4).jpg" alt="User Image">
                            </a>
                            <div class="media-body">
                                <h5 class="media-heading">
                                    <a href="#">@comment.Author</a>
                                </h5>
                                <span class="comment-date">@comment.Created</span>
                                <a href="" class="comment-reply pull-right">Reply</a>
                                @comment.Body
                            </div>
                        </li>
                    </ul>
                }

            </div>
            <form class="comment-form">
                <h5 class="subpage-title">Add Comment</h5>
                <div class="row">
                    <div class="col-md-4">
                        <input class="form-control" placeholder="Name (required)" type="text">
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" placeholder="Email (required)" type="text">
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" placeholder="Website" type="text">
                    </div>
                </div>
                <!-- row-fluid -->
                <textarea class="form-control" rows="3"></textarea>
                <button class="btn btn-flat flat-color">Post Comment</button>
            </form>
        </div>
    </div>
</section>