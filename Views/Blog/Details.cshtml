@using Portfolio.Models
@model BlogPost
@{
    ViewBag.Title = "Details";
}

@*@Html.AntiForgeryToken()*@
<section id="blog-posts" class="section colored-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                @*<h2>@ViewBag.Title</h2>
                <h3>@ViewBag.Message</h3>*@
            </div>
            <div class="col-md-5 blogAccount">
                @Html.Partial("_LoginPartial")
                <br />
                <br />
                <a href="@Url.Action("Index", "Blog")" class="pull-right">Back to Blog Home</a>
            </div>
        </div>
        <div class="post-content">
            <h4>@Html.DisplayFor(model => model.Title)</h4>
            <div class="blogBody">@Html.Raw(Model.Body)</div>
            <div class="media-body">
                @if (Model.MediaURL != null) {
                    <img src="@Model.MediaURL" class="img-responsive" alt="@Model.Title" />
                }
            </div>
        </div>
        <div class="post-meta">
            <ul class="meta-list row">
                <li class="col-md-8">
                    @if (User.IsInRole("Admin") || User.IsInRole("Moderator")) {
                        <span><a href="@Url.Action("Edit", "Blog", new { id =  Model.Id })" class="editDeleteLink">Edit Post</a></span>
                        <span><a href="@Url.Action("Delete", "Blog", new { id = Model.Id })" class="editDeleteLink">Delete Post</a></span>
                    }
                    <span>Posted on</span>
                    <span class="black">@Html.DisplayFor(model => model.Created)</span>
                </li>
                <li class="col-md-4 text-right">
                    <span>By Brandon Payne</span>
                </li>
            </ul>
        </div>
        
        <div class="row">
            @if (Request.IsAuthenticated) {
            <div class="post-comments">
                <div class="col-md-12">
                    <form class="comment-form" role="form" method="post" action="@Url.Action("AddComment", "Blog")">
                        <input type="hidden" name="PostId" value="@Model.Id" />
                        <input type="hidden" name="slug" value="@Model.Slug" />
                        <input type="hidden" name="Author" value="@Model.DisplayName" />

                        <h5 class="subpage-title">Add Comment</h5>

                        <input type="text" name="Body" class="form-control" rows="5" />
                        <input type="submit" class="btn btn-flat flat-color" value="Post Comment" />
                    </form>
                </div>
            </div>
            }

            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h5 class="subpage-title"><span style="font-size:.7em;">@*(Add Comment Count)*@</span> Comments</h5>
                        @foreach (var comment in Model.Comments) {
                            <ul class="media-list">
                                <li class="media">
                                    <div class="media-body">
                                        <h5 class="media-heading">
                                            @Html.DisplayTextFor(model => comment.Author.DisplayName)
                                            <span>Created: @comment.Created.ToString("g") </span>
                                            @if (comment.Updated != null) {
                                                <span class="small">Updated by: @comment.Author.DisplayName</span>
                                                <span> - @comment.Updated </span>
                                            }
                                            
                                            <a href="" data-toggle="modal" class="CommentClass comment-reply pull-right" data-placeholder="@comment.Body" data-target="#editComment" data-body="@comment.Body" data-id="@comment.Id">Edit Comment</a>
                                            <a href="" class="comment-reply pull-right">Delete Comment</a>
                                        </h5>

                                        @comment.Body
                                    </div>
                                </li>
                            </ul>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div id="editComment" class="modal fade" role="dialog">
    <div class="modal-dialog numbersGame">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="post-comments">
                            <div class="col-md-12">
                                <form class="comment-form" role="form" method="post" action="@Url.Action("EditComment", "Blog")">
                                    <input type="hidden" name="PostId" value="@Model.Id" />
                                    <input type="hidden" name="slug" value="@Model.Slug" />
                                    <input type="hidden" name="Author" value="@Model.DisplayName" />
                                    <input type="hidden" id="commentId" name="Id" value="" />
                                    <h5 class="subpage-title">Edit Comment</h5>
                                    <label>Comment Body: </label>
                                    <input type="text" id="commentBody" class="form-control" name="Body" value="" rows="5" />
                                    <label>Reason for editing: </label>
                                    <input type="text" name="UpdateReason" class="form-control" value="" rows="5" />
                                    <input type="submit" class="btn btn-flat flat-color" value="Edit Comment" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>
        $('.CommentClass').click(function () {
            $('#commentId').val($(this).attr('data-id'));
            $('#commentBody').val($(this).attr('data-body'));
        });
    </script>
}